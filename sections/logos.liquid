{% liquid
  assign title = settings.logos_title
  assign images = settings.logos_metaobjects
%}

{{ 'section-logos.css' | asset_url | stylesheet_tag }}

<div style="--color: {{ section.settings.color }}; --background: {{ section.settings.background }}" class="logos">
  <div class="container">
    {% if title != blank %}
      <h2 class="text-center">
        {{ title }}
      </h2>
    {% endif %}
    <ul class="logos__list flex items-center">
      {% for i in (1..3) %}
        {% for image in images %}
          <li {% if i > 1 %}class="logos__item--mobile"{% endif %}>
            {{ image.logo | image_url: width: 200 | image_tag }}
          </li>
        {% endfor %}
      {% endfor %}
    </ul>
  </div>
</div>



{% schema %}
{
  "name": "Press logo",
  "disabled_on": {
    "groups": [
      "aside"
    ]
  },
  "settings": [
    {
      "type": "color",
      "id": "color",
      "label": "Color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#182D4D"
    }
  ],
  "presets": [
    {
      "name": "Press logo",
      "settings": {
      }
    }
  ]
}
{% endschema %}