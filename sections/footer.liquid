{%- liquid 
  assign hide_on_templates_footer = section.settings.hide_on_templates_footer | split: ','
  if hide_on_templates_footer contains template
    assign hide_blocks = section.settings.hide_blocks
    assign hide_country_selector = section.settings.hide_country_selector
    assign hide_payments_methods = section.settings.hide_payments_methods
  endif

  assign has_selectors = false
  if section.settings.enable_country_selector and localization.available_countries.size > 1 and hide_country_selector != true
    assign has_selectors = true
  endif
-%}

{% if section.blocks != blank and hide_blocks != true %}
  <div class="container container--no-max section-footer__row-container">
    <div class="section-footer__row section-footer__row--blocks" data-num-blocks="{{ section.blocks.size }}">
      {% for block in section.blocks %}
        {% case block.type %}
        {% when '@app' %}
          <div class="section-footer__row__col">
            {% render block %}
          </div>

        {% when 'menu' %}
          <div class="section-footer__row__col section-footer__menu-block" role="navigation" aria-label="{{ 'accessibility.secondary_navigation' | t }}" {{ block.shopify_attributes }}>
            {% if block.settings.title != blank %}
              {%- assign title_word_count = block.settings.title | split: ' ' | size -%}
              <div class="section-footer__title heading-font h4{% if title_word_count < 4 %} no-wrap{% endif %}">
                {{- block.settings.title | escape -}}
              </div>
            {% endif %}

            {% if block.settings.menu != blank %}
              <ul class="section-footer__menu-block__menu" {{ block.shopify_attributes }}>
                {% for link in linklists[block.settings.menu].links %}
                  <li>
                    <a href="{{ link.url }}" {% if link.title.size < 25 %}class="no-wrap"{% endif %}>
                      {{- link.title -}}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>

        {% when 'text' %}
          <div class="section-footer__row__col section-footer__text-block {% if block.settings.text != blank %}section-footer__text-block--with-text{% endif %}" {{ block.shopify_attributes }}>
            {% if block.settings.title != blank %}
              {%- assign title_word_count = block.settings.title | split: ' ' | size -%}
              <div class="section-footer__title heading-font h4{% if title_word_count < 4 %} no-wrap{% endif %}">
                {{- block.settings.title | escape -}}
              </div>
            {% endif %}

            {% if block.settings.text != blank %}
              <div class="section-footer__text rte">
                {{- block.settings.text -}}
              </div>
            {% endif %}

            {% if block.settings.image != blank %}
              <span class="section-footer__text-block__image" style="max-width: {{ block.settings.image_width }}px">
                {%- liquid
                  assign image_sizes = block.settings.image_width | append: 'px'
                  assign image_widths = block.settings.image_width | times: 2 | prepend: ', ' | prepend: block.settings.image_width
                -%}
                {%- render 'image' with block.settings.image, sizes: image_sizes, widths: image_widths, loading: 'lazy' -%}
              </span>
            {% endif %}

            {% if block.settings.show_social_icons != blank %}
              <div class="section-footer__text-block__social">
                {%- liquid
                  if block.settings.soc_icons_large
                    assign icon_height = 23
                  else
                    assign icon_height = 15
                  endif
                  if block.settings.soc_icons_large
                    assign container_class = 'social--large'
                  else
                    assign container_class = ''
                  endif

                  render 'social-media', icon: settings.social_custom_icon, icon_height: icon_height, class: container_class
                -%}
              </div>
            {% endif %}

          </div>

        {% when 'newsletter' %}
          <div class="section-footer__row__col section-footer__newsletter-block" {{ block.shopify_attributes }}>
            {% if block.settings.title != blank %}
              {%- assign title_word_count = block.settings.title | split: ' ' | size -%}
              <div class="section-footer__title heading-font h4{% if title_word_count < 4 %} no-wrap{% endif %}">
                {{- block.settings.title | escape -}}
              </div>
            {% endif %}

            {% if block.settings.text != blank %}
              <div class="section-footer__text rte">
                {{ block.settings.text }}
              </div>
            {% endif %}

            {% if block.settings.klaviyoid != blank %}
            <div class="klaviyo-form-{{ block.settings.klaviyoid }}"></div>
            {% endif %}

            {% if block.settings.show_social_icons != blank %}
              <div class="section-footer__newsletter-block__social">
                {%- liquid
                  if block.settings.soc_icons_large
                    assign icon_height = 23
                  else
                    assign icon_height = 15
                  endif
                  if block.settings.soc_icons_large
                    assign container_class = 'social--large'
                  else
                    assign container_class = ''
                  endif

                  render 'social-media', icon: settings.social_custom_icon, icon_height: icon_height, class: container_class
                -%}
              </div>
            {% endif %}

            {% if block.settings.image_certification != blank %}
              <span class="section-footer__text-block__image" style="max-width: {{ block.settings.image_certification_width }}px">
                {%- liquid
                  assign image_sizes = block.settings.image_certification_width | append: 'px'
                  assign image_widths = block.settings.image_certification_width | times: 2 | prepend: ', ' | prepend: block.settings.image_certification_width
                -%}
                {%- render 'image' with block.settings.image_certification, sizes: image_sizes, widths: image_widths, loading: 'lazy' -%}
              </span>
            {% endif %}
          </div>

        {% when 'custom-liquid' %}
          <div class="section-footer__row__col section-footer__custom-liquid-block" {{ block.shopify_attributes }}>
            {% if block.settings.title != blank %}
              {%- assign title_word_count = block.settings.title | split: ' ' | size -%}
              <div class="section-footer__title heading-font h4{% if title_word_count < 4 %} no-wrap{% endif %}">
                {{- block.settings.title | escape -}}
              </div>
            {% endif %}

            <div class="section-footer__custom-liquid">
              {{- block.settings.code -}}
            </div>
          </div>

        {% endcase %}
      {% endfor %}
    </div>
  </div>
{% endif %}

{%- liquid
  assign showing_localization = false
  if section.settings.enable_country_selector and localization.available_countries.size > 1 and hide_country_selector != true
    assign showing_localization = true
  endif
-%}
<div class="container container--no-max section-footer__row-container {% if showing_localization %}section-footer__row-container--with-localization{% endif %}">
  <div class="section-footer__row section-footer__row-lower">
    <div class="section-footer__row__col">
      {% if section.settings.show_payment_icons and hide_payments_methods != true %}
        <div class="section-footer__payment-icons payment-icons__style--{{ section.settings.payment_icons_style }}">
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag: class: 'section-footer__payment-icon' }}
          {% endfor %}
        </div>

      {% endif %}
      {% if section.settings.lower_menu != blank %}
        <div class="section-footer__lower-menu" role="navigation">
          <ul class="section-footer__lower-menu__list" aria-label="{{ 'accessibility.secondary_navigation' | t }}">
            {% for link in linklists[section.settings.lower_menu].links %}
              <li>
                <a href="{{ link.url }}">
                  {{- link.title -}}
                </a>
              </li>
            {% endfor %}
            {% if localization.country.iso_code == 'DE' or request.locale.iso_code == 'de' %}
              <li>
                <a href="https://wesmyle.de/pages/impressum" hreflang="de" class="no-wrap">Impressum</a>
              </li>
            {% endif %}
          </ul>
        </div>
      {% endif %}
    </div>
    <div class="section-footer__row__col">
      {% if has_selectors %}
        <div class="section-footer__localization">
          {% comment %} Should be removed in future
            {% render 'localization-form', id: 'footer-localization', hide_labels: true, promote_popular: true %}
          {% endcomment %}
          {% render 'localization-selector', id: 'footer-localization', hide_labels: true, show_flags: false %}
        </div>
      {% endif %}

      <div class="copyright">
        {%- assign copyright_year = 'now' | date: '%Y' -%}
        <span class="copy">{{ 'sections.footer.copyright_html' | t: year: copyright_year, shop_url: routes.root_url, shop_name: shop.name }}</span>

        {% if section.settings.show_powered_by %}
          {{ powered_by_link }}
        {% endif %}

      </div>
    </div>
  </div>
</div>


