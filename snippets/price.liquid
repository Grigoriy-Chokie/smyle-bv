{% comment %}
  Parameters:
  - product {Object} - Product object.
  - show_currency_code {Boolean} - Use 'money_with_currency' instead of 'money'.
  - show_labels {Boolean} - Show Sale/Sold Out labels (optional, default is false).
  - for_variant_picker {Boolean} - Uses variant price and markup for display of all variant states (optional, default is false).
  - current_variant {Object} - Current variant, if for_variant_picker is true.
  - use_default_price_metafield {Boolean} - Use metafield price.default to show this price before variant selected.

  Usage:
  {% render 'price', product: product %}
{% endcomment %}

{%- liquid
  assign variant = current_variant | default: product.variants | sort: 'price' | first

  if for_variant_picker
    if current_variant == false
      assign available = true
    endif
  else
    assign for_variant_picker = false
    assign available = variant.available | default: false
  endif

  assign compare_at_price = compare_price | default: variant.compare_at_price
  assign price = price | default: variant.price | default: 1999

  assign has_defaut_price = false
  assign default_compare_at_price = compare_at_price | default: variant.compare_at_price | default: variant.price
  assign default_price = product.metafields.price.default
  
  if use_default_price_metafield and default_price != blank
    assign default_price = default_price.value
    assign has_defaut_price = true
  endif
  
-%}      

<div class="price font-semibold flex items-center{%- if compare_at_price > price %} price--on-sale{% endif -%}
                 {%- if available == false %} price--sold-out{% endif -%}">
  <div class="price__default">
    {%- if has_defaut_price -%}
      {% if default_compare_at_price > default_price -%}
        <span class="price__was" {% unless independent_price %}data-original-price{% endunless %}>
          {{ default_compare_at_price | money_without_trailing_zeros }}
        </span>
      {%- endif -%}
      <span class="price__current" {% unless independent_price %}data-discounted-price{% endunless %}>
        {{ default_price | money }}
      </span>
    {%- else -%}
      {%- if product.price_varies and current_variant == false -%}
        {%- if for_variant_picker == false  -%}
          <span class="price__from">{{ 'products.product.from' | t }}</span>
        {%- elsif for_variant_picker -%}
          <span class="price__from">{{ 'products.product.from' | t }}</span>
        {%- endif -%}
      {%- endif %}

      {% if compare_at_price > price -%}
        <span class="price__was" {% unless independent_price %}data-original-price{% endunless %}>
          {%- if compare_at_price > price -%}
            {% if trailing_zeros %}
              {{- compare_at_price | money_without_trailing_zeros -}}
            {%- elsif show_currency_show_currency_codecode -%}
              {{- compare_at_price | money_with_currency -}}
            {%- else -%}
              {{- compare_at_price | money -}}
            {%- endif -%}
          {%- endif -%}
        </span>
      {%- endif -%}
      <span class="price__current" {% unless independent_price %}data-discounted-price{% endunless %}>
          {% if trailing_zeros %}
            {{ price | money_without_trailing_zeros }}
          {%- elsif show_currency_show_currency_codecode -%}
            {{ price | money_with_currency }}
          {%- else -%}
            {{ price | money }}
          {%- endif -%}
      </span>
    {%- endif -%}
  </div>

{% if show_labels %}
  {% if settings.prod_sold_out_show and product.available == false %}
    <span class="price-label price-label--sold-out">{{ 'products.product.sold_out' | t }}</span>

  {% elsif settings.prod_pre_order_label_show and product.template_suffix contains 'preorder' %}
    <span class="price-label price-label--preorder">{{ 'products.product.preorder' | t }}</span>

  {% elsif settings.prod_sale_show %}
    {% assign use_default_discount = false %}
    {% assign use_variant_discount = false %}

    {% if has_defaut_price and default_compare_at_price > default_price %}
      {% assign use_default_discount = true %}
    {% endif %}

    {% if variant.compare_at_price and variant.compare_at_price > variant.price %}
      {% assign use_variant_discount = true %}
    {% endif %}

    {% if use_default_discount or use_variant_discount %}
      {% liquid
        assign compare_price_value = variant.compare_at_price
        assign price_value = variant.price

        if use_default_discount
          assign compare_price_value = default_compare_at_price
          assign price_value = default_price
        endif

        assign discount_percent = price_value | plus: 0.0 | divided_by: compare_price_value | minus: 1 | times: -100 | floor
        assign discount_amount = compare_price_value | minus: price_value | floor | money_without_trailing_zeros
        assign sale_text_key = sale_text_key | default: 'products.product.save_percent'
      %}
      <span class="price-label price-label--sale {{ badges_class }}">
        {% if save_pattern != blank %}
          {{ save_pattern | replace: '[amount]', discount_amount }}
        {% else %}
          {{ sale_text_key | t: discount: discount_percent }}
        {% endif %}
      </span>
    {% endif %}
  {% endif %}
{% endif %}






  {% if for_variant_picker or variant.unit_price_measurement %}
    <div class="unit-price"{% if variant.unit_price_measurement == nil %} hidden{% endif %}>
      <span class="visually-hidden">{{ 'products.product.price.unit_price' | t }}</span>
      <span class="unit-price__price">{{ variant.unit_price | money }}</span>
      <span class="unit-price__separator">{{ 'products.product.price.unit_price_separator' | t }}</span>
      <span class="unit-price__unit">
        {%- if variant.unit_price_measurement.reference_value != 1 -%}
          {{- variant.unit_price_measurement.reference_value -}}
        {%- endif -%}
        {{ variant.unit_price_measurement.reference_unit }}
      </span>
    </div>
  {% endif %}

  {% if for_variant_picker %}
    <div class="price__no-variant" hidden>
      <strong class="price__current">{{ 'products.variant.non_existent' | t }}</strong>
    </div>
  {% endif %}
</div>
